#Draw any polygon

def drawpolygon(t, sides,length):
    for i in range(sides):
        t.forward(length)
        t.right(360/sides)

import turtle
wn = turtle.Screen()
wn.bgcolor("pink")
tess = turtle.Turtle()
tess.fillcolor(('blue'))
tess.begin_fill()
drawpolygon(tess, 10, 20)
tess.end_fill()
tess.penup()
tess.goto(0, 20)
tess.pendown()
tess.write("Hey moron")

wn.exitonclick()
